# AssetTrack Production Environment Template
# Copy this file to .env before deployment
# Generate secure values with: openssl rand -base64 32

# === REQUIRED SETTINGS ===

# Application
NODE_ENV=production
PORT=5000

# Security
SESSION_SECRET=replace_with_secure_random_string_min_32_chars

# === DATABASE SETTINGS (Choose ONE option) ===

# Option 1: Connection string (preferred for managed databases)
DATABASE_URL=postgresql://user:password@host:5432/database

# Option 2: Individual connection parameters (for local PostgreSQL)
PGHOST=db
PGPORT=5432
PGUSER=asset_user
PGPASSWORD=replace_with_secure_password
PGDATABASE=asset_management

# === TRAEFIK SSL SETTINGS ===

# Domain for SSL certificate and routing
DOMAIN=yourdomain.com

# Email for Let's Encrypt notifications
LETSENCRYPT_EMAIL=your@email.com

# Traefik dashboard credentials (htpasswd format)
# Generate with: htpasswd -nb admin secure_password
TRAEFIK_DASHBOARD_AUTH=admin:$apr1$xyz...

# === OPTIONAL SETTINGS ===

# TLS verification for external databases
# 1 = Verify certificates (recommended for production)
# 0 = Skip verification (only for self-signed certs)
NODE_TLS_REJECT_UNAUTHORIZED=1

# External database flag (for docker-compose.production.yml)
# true = Use DATABASE_URL from above
# false = Use local PostgreSQL container
USE_EXTERNAL_DB=false