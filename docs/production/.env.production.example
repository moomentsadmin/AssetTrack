# Copy this file to .env.production and fill in values before deploying.

# Server
PORT=5000
NODE_ENV=production

# Database (Postgres)
# Example (local): postgres://user:pass@localhost:5432/assettrack
# Example (AWS RDS): postgres://user:pass@rds-host.example.com:5432/assettrack?sslmode=require
DATABASE_URL=

# Session secret used by express-session (use a long random value)
SESSION_SECRET=

# SMTP/Email settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME="AssetTrack"

# Optional: Sentry DSN or other observability keys
SENTRY_DSN=

# Whether the container should run automatic migrations at startup.
# Default is false. For controlled production deployments prefer manual
# migrations via the GitHub Actions `Run Migrations (manual)` workflow.
# Set to "true" to enable the entrypoint to run `npx drizzle-kit push:pg`.
ENABLE_AUTO_MIGRATIONS=false

# Enable or disable device tracking (server + UI). Default is false.
# Set to "true" only if you intend to run the tracking agent and accept the
# additional network/DB load and privacy considerations.
ENABLE_DEVICE_TRACKING=false
