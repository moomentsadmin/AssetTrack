{
  "name": "asset-tracking-agent",
  "version": "1.0.0",
  "description": "Device tracking agent for Asset Management System",
  "main": "agent.js",
  "bin": {
    "agent": "agent.js"
  },
  "scripts": {
    "start": "node agent.js",
    "build": "node build.js",
    "build:win": "pkg . --targets node18-win-x64 --output dist/agent-win",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/agent-linux",
    "build:macos": "pkg . --targets node18-macos-x64 --output dist/agent-macos",
    "build:all": "npm run build:win && npm run build:linux && npm run build:macos",
    "build:package": "node build.js all"
  },
  "keywords": [
    "asset-tracking",
    "device-monitoring",
    "system-monitoring"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "commander": "^12.1.0",
    "systeminformation": "^5.21.0"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^5.11.5"
  },
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "assets": []
  }
}
